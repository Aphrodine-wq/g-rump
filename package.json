{
  "name": "grump-platform",
  "version": "1.0.0",
  "description": "Grump - The most expressive AI character in any app store",
  "private": true,
  "workspaces": [
    "backend",
    "web"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../web && npm install",
    "start:backend": "cd backend && npm start",
    "start:web": "cd web && npm run dev",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:web\"",
    "build:web": "cd web && npm run build",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:web\""
  },
  "keywords": [
    "grump",
    "ai",
    "chat",
    "ios",
    "react",
    "express"
  ],
  "author": "Grump Industries",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

